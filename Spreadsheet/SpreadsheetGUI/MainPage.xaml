<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:SS="clr-namespace:SS"
             x:Class="SpreadsheetGUI.MainPage">
    <ContentPage.MenuBarItems>
        <MenuBarItem Text="File">
            <MenuFlyoutItem Text="New" Clicked="NewClicked" />
            <MenuFlyoutItem Text="Open" Clicked="OpenClicked" />
             <MenuFlyoutItem Text="Save" Clicked="SaveClicked" />

        </MenuBarItem>
    </ContentPage.MenuBarItems>

    <Grid RowDefinitions="40, *">
        
        <HorizontalStackLayout>
            <Border StrokeThickness="7"
                   Stroke="#000000" >
                <Label
                x:Name="CellName"
                Text="A1"
                Grid.Row="1"
                Padding="40"/>
            </Border>
          
            <Border StrokeThickness="7"
                   Stroke="#000" >
                <Entry
                x:Name="Contents"
                Placeholder="Enter text"
                Text=""
                Grid.Row="1"
                Completed="OnCompleted"
                />
               </Border>
            <Border StrokeThickness="7"
                   Stroke="#000" >
                <Label
                x:Name="Value"
                Text="Value"
                Grid.Row="1"
                Padding="40"/>
               </Border>
            <Border StrokeThickness="7"
                   Stroke="#000" >
                <Entry
                x:Name="filePath"
                Placeholder="Enter a Save Location"
                Text=""
                Grid.Row="1"
                />
               </Border>
               

        </HorizontalStackLayout>
        
        <SS:SpreadsheetGrid
            x:Name="spreadsheetGrid"
            Grid.Row="2"/>
        
    </Grid>
    
</ContentPage>

